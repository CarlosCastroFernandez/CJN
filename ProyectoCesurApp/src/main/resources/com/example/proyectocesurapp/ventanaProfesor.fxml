<BorderPane prefHeight="700.0" prefWidth="1141.0" styleClass="ventana" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectocesurapp.VentanaProfesor">
   <center>
      <HBox>
         <children>
            <VBox>
               <children>
                  <TableView fx:id="tabla" prefHeight="482.0" prefWidth="1103.0">
                    <columns>
                      <TableColumn fx:id="cNombre" prefWidth="75.0" text="Nombre" />
                      <TableColumn fx:id="cApellidos" prefWidth="84.0" text="Apellidos" />
                        <TableColumn fx:id="cEmail" prefWidth="69.0" text="Email" />
                        <TableColumn fx:id="cTelefono" prefWidth="88.0" text="Teléfono" />
                        <TableColumn fx:id="cFecha" prefWidth="139.0" text="Fecha Nacimiento" />
                        <TableColumn fx:id="cCurso" prefWidth="85.0" text="Curso" />
                        <TableColumn fx:id="cProfesor" prefWidth="138.0" text="Nombre Profesor" />
                        <TableColumn fx:id="cEmpresa" prefWidth="136.0" text="Nombre Empresa" />
                        <TableColumn fx:id="cHorasDUAL" prefWidth="100.0" text="Horas DUAL" />
                        <TableColumn fx:id="cHorasFCT" prefWidth="100.0" text="Horas FCT" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </TableView>
                  <FlowPane alignment="TOP_RIGHT" columnHalignment="RIGHT" hgap="10.0" prefHeight="62.0" prefWidth="819.0">
                     <children>
                        <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editar" text="Editar" />
                        <Button fx:id="btnBorrar" mnemonicParsing="false" onAction="#borrar" text="Borrar" />
                        <Button fx:id="btnNuevoAlumno" mnemonicParsing="false" onAction="#nuevoALumno" text="Nuevo Alumno" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </FlowPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <Pane prefHeight="149.0" prefWidth="999.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar" layoutX="1065.0" layoutY="31.0" prefHeight="31.0" prefWidth="35.0" stylesheets="@style.css">
              <menus>
                <Menu fx:id="menu" mnemonicParsing="false">
                  <items>
                    <MenuItem fx:id="menuLogout" mnemonicParsing="false" onAction="#logout" text="Logout" />
                        <MenuItem fx:id="menuCuenta" mnemonicParsing="false" onAction="#cuenta" text="Cuenta" />
                        <MenuItem fx:id="menuSalir" mnemonicParsing="false" onAction="#salir" text="Salir" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="416.0" layoutY="48.0" prefHeight="61.0" prefWidth="309.0" text="Gestión de Alumnos">
               <font>
                  <Font name="System Bold Italic" size="30.0" />
               </font>
            </Label>
            <ImageView fx:id="imagen" fitHeight="43.0" fitWidth="45.0" layoutX="1022.0" layoutY="26.0" onMouseClicked="#clickImagen" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@imagenes/usuario.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </top>
</BorderPane>
