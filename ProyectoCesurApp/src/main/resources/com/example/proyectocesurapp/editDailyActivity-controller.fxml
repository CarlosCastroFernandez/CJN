<BorderPane prefHeight="740.0" prefWidth="1137.0" styleClass="ventana" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditDailyActivityController">
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
         <center>
            <VBox alignment="CENTER" prefHeight="88.0" prefWidth="306.0" spacing="20.0">
               <children>
                  <Label text="Fecha">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <DatePicker fx:id="dpDate" />
                  <Label text="Tipo Práctica">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="comboPracticeType" prefHeight="26.0" prefWidth="159.0" />
                  <Label text="Horas">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="spHoras" prefHeight="26.0" prefWidth="149.0" />
                  <Label text="Actividad">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldActivity" maxWidth="300.0" />
                  <Label text="Observaciones">
                     <font>
                        <Font name="System Bold Italic" size="13.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="taObservations" maxHeight="200.0" maxWidth="400.0" prefWidth="252.0" />
                  <FlowPane alignment="CENTER" hgap="40.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnGuardar" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#guardar" text="Guardar" textAlignment="CENTER" />
                        <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" />
                     </children>
                  </FlowPane>
               </children>
            </VBox>
         </center>
         <top>
            <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Gestión Actividad Diaria">
                     <font>
                        <Font name="System Bold Italic" size="30.0" />
                     </font>
                  </Label>
               </children>
               <BorderPane.margin>
                  <Insets top="30.0" />
               </BorderPane.margin>
            </FlowPane>
         </top>
      </BorderPane>
   </center>
